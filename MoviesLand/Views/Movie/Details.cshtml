@model MoviesLand.Models.Movie

<div class="container">
    <h3>Movie Details</h3>
    <ul>
        <li><strong>Id: </strong>@Model.Id</li>
        <li><strong>Title: </strong> @Model.Title</li>
        <li><strong>Genre: </strong> @Model.Genre.Name</li>
        <li><strong>Release Date: </strong>@Html.DisplayFor(m => m.ReleaseDate, "{0:d MMM yyyy}", null)</li>
        <li><strong>Date Added: </strong>@Html.DisplayFor(m => m.DateAdded, "{0:d MMM yyyy}", null)</li>
        <li><strong>Number in Stock: </strong>@Model.NumberInStock</li>
    </ul>
</div>